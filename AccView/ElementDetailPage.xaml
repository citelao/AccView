<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AccView.ElementDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AccView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="4">
        <TextBlock Text="{x:Bind ViewModel.Name, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" MaxLines="1" />
        <TextBlock Text="{x:Bind ViewModel.LocalizedControlType, Mode=OneWay}" />
        <TextBlock Text="{x:Bind ViewModel.RuntimeIdString, Mode=OneWay}" />
        <TextBlock Text="{x:Bind ViewModel.BoundingRect, Mode=OneWay}" />

        <Grid RowSpacing="4" ColumnSpacing="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0">IsEnabled</TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind ViewModel.IsEnabled, Mode=OneWay}" />

            <TextBlock Grid.Row="1" Grid.Column="0">IsOffscreen</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind ViewModel.IsOffscreen, Mode=OneWay}" />

            <TextBlock Grid.Row="2" Grid.Column="0">HasKeyboardFocus</TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind ViewModel.HasKeyboardFocus, Mode=OneWay}" />

            <TextBlock Grid.Row="3" Grid.Column="0">ControlType</TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{x:Bind ViewModel.ControlType, Mode=OneWay}" />
        </Grid>

        <Button
            x:Name="InvokeButton"
            IsEnabled="{x:Bind ViewModel.IsInvokePatternAvailable, Mode=OneWay}"
            Click="InvokeButton_Click">Invoke</Button>

    </StackPanel>
</Page>

